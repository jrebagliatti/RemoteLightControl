@model IEnumerable<RemoteLightControl.Models.LightModel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <!--Script references. -->
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.1.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the page.-->
    <script>
        $(function () {
            // Reference the auto-generated proxy for the hub.
            var hub = $.connection.notificationsHub;
            // Create a function that the hub can call back to display messages.
            hub.client.notifyLightChange = function (lightId, message) {
                // Add the message to the page.
                console.log("Message received");
                alert(message);
            };
            // Start the connection.
            $.connection.hub.start().done(function () {
                console.log("SignalR Connection started");
            });
        });
    </script>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                Light Name
            </th>
            <th>
                Value
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @item.Description
            </td>
            <td>
                @item.Value
            </td>
            <td>
                @Ajax.ActionLink("Turn on", "TurnOn", new { id = item.Id }, new AjaxOptions() { HttpMethod = "Post" });
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
