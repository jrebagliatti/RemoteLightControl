@model IEnumerable<RemoteLightControl.Models.LightModel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                Light Name
            </th>
            <th>
                Value
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @item.Description
            </td>
            <td>
                @item.Value
            </td>
            <td>
                @Ajax.ActionLink("Turn on", "TurnOn", new { id = item.Id }, new AjaxOptions() { HttpMethod = "Post" });
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
